<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/imagem_de_fundo_inicial"
            android:foregroundGravity="fill" />

        <ImageView
            android:id="@+id/imageView_expresso"
            android:layout_width="505dp"
            android:layout_height="63dp"
            android:layout_marginStart="113dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="114dp"
            android:foreground="@drawable/expresso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_jogar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="143dp"
            android:layout_height="38dp"
            android:layout_marginStart="294dp"
            android:layout_marginEnd="294dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="cursive"
            android:foreground="@drawable/jogar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>